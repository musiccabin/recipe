<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header>
  <nav>

<%= link_to 'Home', new_user_path %>
  <% if user_signed_in? %>
  Hello <%= current_user.first_name%>
  
  <div class='recipe-preferences'>
  <%= link_to 'Preferences', new_user_path %>
  <%= link_to 'Enable/Disable Store Specials', new_user_path %>
  <%= link_to 'Lunch/Dinner/Desserts', new_user_path %>
  </div>

<div class='account-preferences'>
  <%= link_to 'Favourite Recipes', new_user_path %>
  <%= link_to 'Account Settings', setting_path %>
  <%= link_to 'Sign Out', session_path, method: :delete %>
  </div>  
  <% else%>
  <%= link_to "Sign In", new_session_path%>
  <% end %>
  </nav>
  </header>
  <main>
  <% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
  <%= message%>
  </div>
  <% end %>
    <%= yield %>
    </main>
  </body>
</html>
