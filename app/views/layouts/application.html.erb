<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header>
  <nav>
  <div class='recipe-preferences'>
  <%= link_to 'Preferences', root_path %>
  <%= link_to 'Enable/Disable Store Specials', root_path %>
  <%= link_to 'Lunch/Dinner/Desserts', root_path %>
  </div>

<div class='account-preferences'>
  <%= link_to 'Favourite Recipes', root_path %>
  <%= link_to 'Account Settings', root_path %>
  <%= link_to 'Sign Out', root_path %>
  </div>  

<%= link_to 'Home', root_path %>
  <% if user_signed_in? %>
  Hello <%= current_user.full_name%>
  <%= link_to "Sign Out", session_path, method: :delete, data: {confirm: "Are you sure you wnat to sign out?"}%>
  <% else%>
  <%= link_to "Sign In", new_session_path%>
  <%= link_to "Sign Up", new_user_path%>
  <% end %>
  </nav>
  </header>
  <main class="container-fluid">
  <% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
  <%= message%>
  </div>
  <% end %>
    <%= yield %>
    </main>
  </body>
</html>
