<% content_for :body_class, 'forgot-password' %>

<h1 class='page-title'>Forgot Password?</h1>

<div style='text-align: center'>
<%=form_with url: send_email_path, method: :post, local: true do |f|%>
<%=f.label :email, class: 'signin-form-label'%>
<%=f.email_field :email, class: 'input-field'%>
<%=f.submit 'Submit', class: 'button'%>
<%end%>
</div>