<%if current_user.errors.any?%>
<% current_user.errors.full_messages.each do |error|%>
<p><%=error%></p>
<%end%>
<%end%>

<%= form_with url: user_update_path, :html => { :multipart => true }, local: true do |f| %>
<div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: current_user.first_name %>
</div>
<div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: current_user.last_name %>
</div>
<div>
    <%= f.label :email %>
    <%= f.email_field :email, value: current_user.email %>
</div>
<div>
    <p>Change your profile picture</p>
    <%= f.file_field :avatar %>
</div>
     <%=f.submit%>

<%=link_to 'Change Password', password_reset_path%>
